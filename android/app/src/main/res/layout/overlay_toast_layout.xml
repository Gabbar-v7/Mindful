<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overlay_toast_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top|center_horizontal"
    android:background="@drawable/shape_rounded_lg"
    android:backgroundTint="@color/secondaryContainer"
    android:elevation="8dp"
    android:gravity="center_vertical"
    android:importantForAccessibility="no"
    android:orientation="horizontal"
    android:padding="0dp">


    <ImageView
        android:id="@+id/overlay_toast_app_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:background="@drawable/shape_circular"
        android:clipToOutline="true"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        tools:ignore="UnusedAttribute" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="18dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/overlay_toast_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:text="@string/app_name"
            android:textColor="@color/textSecondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/overlay_toast_screen_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:text="@string/app_screen_time_usage_info"
            android:textColor="@color/textPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
